<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <bean class="com.tanmay.spring.autowiring.xml.Employee" name="employee" autowire="constructor">
    </bean>

    <bean class="com.tanmay.spring.autowiring.xml.Address" name="address">
        <property name="street" value="a"/>
        <property name="city" value="b"/>
        <property name="hno" value="12"/>
    </bean>

    <bean class="com.tanmay.spring.autowiring.xml.Address" name="address2">
        <property name="street" value="a2"/>
        <property name="city" value="b2"/>
        <property name="hno" value="123"/>
    </bean>
</beans>